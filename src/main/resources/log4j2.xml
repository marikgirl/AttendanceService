<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Parameters>
        <param name="MaxBackupIndex" value="2"/>
    </Parameters>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </Console>
        <RollingFile name="file"
                     fileName="./src/main/resources/logs/logs.log"
                     filePattern="${logPath}/${rollingFileName}_%d{yyyy-MM-dd}.log"
                     append = "true">
            <PatternLayout pattern="%d{MM.dd HH.mm.ss} %5p\t%c:%L - %m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="512 KB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name = "ru.sfedu.AttendanceService" level = "info" additivity = "false">
            <AppenderRef ref="console"/>
            <AppenderRef ref="file"/>
        </Logger>
        <Root level="DEBUG">
        </Root>
    </Loggers>
</Configuration>